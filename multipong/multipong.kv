                    ##size: 10, 100
                    ##pos: root.paddle[2], root.paddle[3]
        BoxLayout:
            size_hint_x: 0.40
            orientation: 'vertical'
            Button:
                size_hint_y: 0.08
                background_color: (0.8, 0.8, 0, 1)
                text: 'Menu'
                color: (0, 1, 0, 1)
                font_size: "20dp"
                on_release: app.go_mainscreen()
            Button:
                size_hint_y: 0.92
                id: button_size
                color: (0, 1, 0, 1)
                background_color: (0, 0.8, 0, 1)
                font_size: "18dp"
                text: "Raquette"

