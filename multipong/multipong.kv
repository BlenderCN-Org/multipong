#:kivy 1.10.0

<MainScreen>:
    BoxLayout:
        orientation: 'horizontal'
        canvas:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint_x: 0.8
            orientation: 'vertical'
            Label:
                text: "Multi Pong\nen reseau"
                bold: True
                size_hint_y: 0.6
                font_size: "48dp"
                color: (0, 1, 0, 1)
            Label:
                text: "Pong pour 10 joueurs"
                size_hint_y: 0.4
                font_size: "18dp"
                color: (0, 1, 0, 1)

        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Button:
                background_color: (0.8, 0.8, 0.8, 1)
                text: 'Jouer'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: app.root.current = "1"
            Button:
                background_color: (0.8, 0.8, 0.8, 1)
                text: 'Options'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: app.open_settings()
            Button:
                background_color: (0.8, 0.8, 0.8, 1)
                text: 'Quitter'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: app.do_quit()

<PongBall>:
    canvas:
        Rectangle:
            pos: self.pos
            size: root.height/60, root.height/60

<PongPaddle>:
    canvas:
        Rectangle:
            pos: self.pos
            size: root.height/60, root.height/8

<Screen1>:
    ball: pong_ball
    paddle_0: paddle0
    paddle_1: paddle1

    PongBall:
        id: pong_ball
        pos: self.pos
    PongPaddle:
        id: paddle0
        pos: self.pos
    PongPaddle:
        id: paddle1
        pos: self.pos

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.70
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    points: root.points
                    width: 3
                    close: 1
        BoxLayout:
            size_hint_x: 0.30
            orientation: 'vertical'
            Button:
                size_hint_y: 0.08
                background_color: (0.5, 0.5, 0.5, 1)
                text: 'Menu'
                color: (0, 1, 0, 1)
                font_size: "20dp"
                on_release: app.go_mainscreen()
            Button:
                size_hint_y: 0.92
                id: button_size
                color: (0, 1, 0, 1)
                background_color: (0.95, 0.95, 0.95, 1)
                font_size: "18dp"
                text: "Raquette"

<Screen2>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            points: self.points
            width: 3
            close: 1

<Screen3>:
    ball:     pong_ball
    paddle_0: paddle_0
    paddle_1: paddle_1
    paddle_2: paddle_2
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            points: self.points
            width: 3
            close: 1
    PongBall:
        id: pong_ball
        pos: self.pos
    PongPaddle:
        id: paddle_0
        pos: self.pos
        canvas.before:
            PushMatrix
            Rotate:
                angle: 10
                origin: self.center
        canvas.after:
            PopMatrix
    PongPaddle:
        id: paddle_1
        pos: self.pos
        canvas.before:
            PushMatrix
            Rotate:
                angle: -10
                origin: self.center
        canvas.after:
            PopMatrix
    PongPaddle:
        id: paddle_2
        pos: self.pos
        canvas.before:
            PushMatrix
            Rotate:
                angle: -10
                origin: self.center
        canvas.after:
            PopMatrix

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.60
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    points: root.points
                    width: 3
                    close: 1
        BoxLayout:
            size_hint_x: 0.40
            orientation: 'vertical'
            Button:
                size_hint_y: 0.08
                background_color: (0.8, 0.8, 0, 1)
                text: 'Menu'
                color: (0, 1, 0, 1)
                font_size: "20dp"
                on_release: app.go_mainscreen()
            Button:
                size_hint_y: 0.92
                id: button_size
                color: (0, 1, 0, 1)
                background_color: (0, 0.8, 0, 1)
                font_size: "18dp"
                text: "Raquette"

<Screen4>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            points: self.points
            width: 3
            close: 1

<Screen5>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            points: self.points
            width: 3
            close: 1
