#:kivy 1.10.0

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Multi Pong\nen reseau"
            bold: True
            size_hint_y: 0.3
            font_size: "48dp"
            color: (0, 1, 0, 1)
        Label:
            text: """Pong pour 10 joueurs"""
            size_hint_y: 0.2
            font_size: "18dp"
            color: (0, 1, 0, 1)
        BoxLayout:
            size_hint_y: 0.06
            orientation: 'horizontal'
            Button:
                background_color: (0.8, 0.8, 0, 1)
                text: 'Jouer'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: root.manager.current = ("1")
        BoxLayout:
            size_hint_y: 0.04
            orientation: 'horizontal'
            Button:
                background_color: (0.8, 0.8, 0, 1)
                text: 'Options'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: app.open_settings()
            Button:
                background_color: (0.8, 0.8, 0, 1)
                text: 'Quitter'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: app.do_quit()

<PongBall>:
    canvas:
        Rectangle:
            pos: self.pos
            size: 12, 12 # TODO size fct resolution ecran

<Screen1>:
    ball: pong_ball

    PongBall:
        id: pong_ball
        center: self.parent.center

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.60
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    points: root.points
                    width: 3
                    close: 1
